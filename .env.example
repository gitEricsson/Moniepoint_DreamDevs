DATA_DIR=./data

# Rows processed per INSERT batch during CSV import (tune for memory vs speed)
IMPORT_BATCH_SIZE=5000

# -- Testing --------------------------------------------------------------
TEST_DATABASE_URL=sqlite+aiosqlite:///:memory:
TEST_API_PORT=8080
